{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017"
    ],
    "baseUrl": "./",
    "paths": {
      "#db/*": [
        "src/db/*"
      ],
      "#controllers/*": [
        "src/controllers/*"
      ],
      "#interfaces/*": [
        "src/interfaces/*"
      ],
      "#exception/*": [
        "src/exception/*"
      ],
      "#utils/*": [
        "src/utils/*"
      ],
      "#service/*": [
        "src/service/*"
      ]
    }
  }
}